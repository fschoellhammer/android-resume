<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recyclerView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            style="?android:attr/textAppearanceMedium"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:id="@+id/icon"
            android:src="@drawable/ic_tu"
            tools:text="Icon"/>

        <TextView
            style="?android:attr/textAppearanceLarge"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/icon"
            tools:text="Vienna University of Technology"
            />

        <TextView
            style="?android:attr/textAppearanceSmall"
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/icon"
            android:layout_below="@+id/title"
            android:layout_marginTop="16dp"
            android:drawableStart="@drawable/ic_access_time_24dp"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            tools:text="2011 Oct - 2013 Sep"
            />

        <TextView
            style="?android:attr/textAppearanceSmall"
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/icon"
            android:layout_below="@+id/date"
            android:drawableStart="@drawable/ic_place_24dp"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            tools:text="Tokyo"
            />

        <TextView
            style="?android:attr/textAppearanceSmall"
            android:id="@+id/major"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/icon"
            android:layout_below="@+id/location"
            android:drawableStart="@drawable/ic_school_24dp"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            tools:text="Master of Science (MSc)"
            />

        <TextView
            style="?android:attr/textAppearanceSmall"
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/major"
            android:layout_marginTop="16dp"
            tools:text="Software Engineering &amp; Internet Computing"
            />


    </RelativeLayout>

</android.support.v7.widget.CardView>

